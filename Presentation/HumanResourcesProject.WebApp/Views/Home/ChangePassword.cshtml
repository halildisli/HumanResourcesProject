@using HumanResourcesProject.Application.DTOs;
@model ChangePasswordDto
@{
    Layout = "_LayoutSignIn";
    ViewData["Title"] = "Welcome to Techopyre";
}
<div class="container">
    <div class="panda">
        <div class="ear"></div>
        <div class="face">
            <div class="eye-shade"></div>
            <div class="eye-white">
                <div class="eye-ball"></div>
            </div>
            <div class="eye-shade rgt"></div>
            <div class="eye-white rgt">
                <div class="eye-ball"></div>
            </div>
            <div class="nose"></div>
            <div class="mouth"></div>
        </div>
        <div class="body"> </div>
        <div class="foot">
            <div class="finger"></div>
        </div>
        <div class="foot rgt">
            <div class="finger"></div>
        </div>
    </div>
    <div>
        <form asp-action="ChangePassword" asp-controller="Home" method="post">
            <div class="hand"></div>
            <div class="hand rgt"></div>
            <h1>Technopyre Software</h1>
            <h1>Change Password</h1>
            <div>
                <input asp-for="UserId" value="@ViewBag.Id" hidden/>
            </div>
            <div class="form-group">
                <input id="password" type="password" required="required" class="form-control" asp-for="NewPassword" />
                <label class="form-label">Password</label>
                <span asp-validation-for="NewPassword" class="alert mx-4">
                </span>
            </div>
            <div class="form-group">
                <input id="password2" type="password" required="required" class="form-control" asp-for="ConfirmPassword" />
                <label class="form-label">Confirm Password</label>
                <span asp-validation-for="ConfirmPassword"></span>
                <input class="btn" type="submit" value="Change Password">
            </div>
            <div class="form-group">
                <button id="showPasswordButton" type="button">Show/Hide </button>
            </div>
        </form>
    </div>
</div>
<div asp-validation-summary="All" class="text-white">
</div>


<script>
    const showPasswordButton = document.querySelector("#showPasswordButton");
    const passwordInput = document.querySelector("#password");

    showPasswordButton.addEventListener("click", () => {
        if (passwordInput.type === "password") {
            passwordInput.type = "text";
        } else {
            passwordInput.type = "password";
        }
    });
</script>

@section Scripts{
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script id="rendered-js">
        $('#password').focusin(function () {
            $('form').addClass('up');
        });
        $('#password').focusout(function () {
            $('form').removeClass('up');
        });

        $('#password2').focusin(function () {
            $('form').addClass('up');
        });
        $('#password2').focusout(function () {
            $('form').removeClass('up');
        });

        // Panda Eye move
        $(document).on("mousemove", function (event) {
            var dw = $(document).width() / 15;
            var dh = $(document).height() / 15;
            var x = event.pageX / dw;
            var y = event.pageY / dh;
            $('.eye-ball').css({
                width: x,
                height: y
            });

        });

        // validation

        $('.btn').click(function () {
            $('form').addClass('wrong-entry');
            setTimeout(function () {
                $('form').removeClass('wrong-entry');
            }, 3000);
        });

    </script>
}
