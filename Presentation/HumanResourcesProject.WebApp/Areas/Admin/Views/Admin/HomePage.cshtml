@model Person
@{
    ViewData["Title"] = "HomePage";
    Layout = "_Layout";
}

<div class="col-lg-10">
    <div class="card">
        <div class="card-header">
            <strong>Profile</strong>
            <small>  Information</small>
        </div>
        <div class="card-body card-block">

            <div class="row">
                <div class="col-12 col-sm-5 mb-3">
                    <div class="mx-auto" style="width: 200px;">
                        <div>
                            <img class="d-flex justify-content-center align-items-center rounded " src="~/images/adminimages/@Model.ImagePath" style="height: 200px; width: 200px;" />
                        </div>
                    </div>
                </div>
                <div class="col d-flex flex-column flex-sm-row justify-content-between mb-3">
                    <div class="text-center text-sm-left mb-2 mb-sm-0">
                        <h2 class="pt-sm-2 pb-1 mb-0 text-nowrap"><strong style="color:#344767">Welcome</strong> @Model.FirstName @Model.SecondName </h2>






                        <div class="mt-5 ms-5 col d-flex flex-column flex-sm-row justify-content-between mb-3">
                            <a asp-controller="Home" asp-action="Detail">
                                <img src="~/images/icon/Detay1.png" alt="Detay" style="height: 50px; width: 50px;" />
                            </a>
                        </div>





                    </div>

                </div>
            </div>






            <div class="col-md-12">

                <address class="mt-3">
                    <div class="col">
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label><strong>Full Name : </strong> </label>

                                    <label value=""> @Model.FirstName @Model.SecondName @Model.Surname @Model.SecondSurname</label>
                                </div>
                            </div>
                            <div class="col">

                                <div class="form-group">
                                    <label><strong>Job : </strong></label>

                                    <label value="">@Model.Job.Name</label>
                                </div>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label><strong>Email : </strong></label>

                                    <label value="email">@Model.Email</label>
                                </div>
                            </div>
                            <br>
                            <br>
                            <div class="col">
                                <div class="form-group">
                                    <label><strong>Department : </strong></label>

                                    <label value="">@Model.Department.Name</label>
                                </div>
                            </div>
                            <br>
                            <br>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label><strong>Phone : </strong></label>

                                    <label value="">@String.Format(" {0:(###) ###-####}", Model.PhoneNumber)</label>

                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    <label><strong>Adress : </strong></label>

                                    <label value="adress">@Model.Address</label>
                                </div>
                            </div>

                        </div>


                    </div>
                </address>

            </div>
        </div>
        <div class="d-flex flex-row justify-content-center">
            <div class="col-md-4 mb-4">

                <a asp-action="Edit" asp-controller="Admin" class="btn btn-primary">Update My Profile</a>
            </div>
        </div>
    </div>
    
</div>



