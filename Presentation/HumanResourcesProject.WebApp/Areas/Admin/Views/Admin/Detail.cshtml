@model Person

@{
    ViewData["Title"] = "Detail";
    Layout = "_Layout";
}



<div class="col-lg-10">
    <div class="card">
        <div class="card-header">
            <strong>Detail</strong>
            <small>  Information</small>
        </div>
        <div class="card-body card-block">

            <div class="row">
                <div class="col-12 col-sm-auto mb-3">
                    <div class="mx-auto" style="width: 140px;">
                        <div>
                            <img class="d-flex justify-content-center align-items-center rounded " src="~/images/adminimages/@Model.ImagePath" style="height: 140px; width: 140px;" />
                        </div>
                    </div>
                </div>
                <div class="col d-flex flex-column flex-sm-row justify-content-between mb-3">
                    <div class="text-center text-sm-left mb-2 mb-sm-0">
                        <h4 class="pt-sm-2 pb-1 mb-0 text-nowrap">@Model.FirstName @Model.SecondName @Model.Surname @Model.SecondSurname</h4>

                        <p class="mb-0" style="color:#7b809a;"><strong>@Model.Company.Name</strong></p>
                        <p class="mb-0" style="color:#7b809a;">Job : <strong> @Model.Job.Name</strong></p>
                        <p class="mb-0" style="color:#7b809a;">Department : <strong> @Model.Department.Name</strong></p>

                        <div class="mt-2">
                            <button class="btn btn-primary" type="button">
                                <span>
                                    @if (Model.Status == 0)
                                    {
                                        <text> Active</text>
                                    }
                                    else
                                    {
                                        <text> Pasive </text>
                                    }
                                </span>
                            </button>
                        </div>
                    </div>

                </div>
            </div>






            <div class="col-md-12">
                <address class="mt-3">
                    <div class="col">
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label><strong>Full Name : </strong> </label>

                                    <label value=""> @Model.FirstName @Model.SecondName @Model.Surname @Model.SecondSurname</label>
                                </div>
                            </div>
                            <div class="col">

                                <div class="form-group">
                                    <label><strong>Identity Number : </strong></label>

                                    <label value="identityNumber">@Model.IdentityNumber</label>
                                </div>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label><strong>Email : </strong></label>

                                    <label value="email">@Model.Email</label>
                                </div>
                            </div>
                            <br>
                            <br>
                            <div class="col">
                                <div class="form-group">
                                    <label><strong>Birth Date : </strong></label>

                                    <label value="birthDate">@Model.BirthDate.ToString("dd/MM/yyyy")</label>
                                </div>
                            </div>
                            <br>
                            <br>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label><strong>Phone : </strong></label>

                                    <label value="">@String.Format(" {0:(###) ###-####}", @Model.PhoneNumber)</label>

                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    <label><strong>Place of Birth : </strong></label>

                                    <label value="birthPlace">@Model.PlaceOfBirth</label>
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label><strong>Starting Date : </strong></label>

                                    <label> @Model.StartingDate.ToString("dd/MM/yyyy")</label>

                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    @{
                                        if (@Model.Status == 0)
                                        {
                                            <label><strong>Ending Date : </strong></label>

                                            <label class="btn btn-success rounded-pill">Still Working</label>
                                        }
                                        else
                                        {
                                            <label><strong>Ending Date : </strong></label>

                                            <label>@Model.EndingDate?.ToString("dd/MM/yyyy")</label>
                                        }
                                    }

                                </div>
                            </div>
                        </div>
                        <label><strong>Adress : </strong></label>
                        <br>
                        <label value="">  @Model.Address</label>
                        <br>
                        <br>
                    </div>
                </address>

            </div>
        </div>
        <div class="d-flex flex-row justify-content-start m-4">
            <div class="col-md-4">
                <a asp-action="Edit" asp-controller="Admin" class="btn btn-warning rounded">Update Profile</a>
            </div>
        </div>
    </div>
    <div class="d-flex flex-row justify-content-center">
        <div class="col-md-4">

            <a asp-action="HomePage" asp-controller="Admin" class="btn btn-primary">Back To Home Page</a>
        </div>
    </div>
</div>








